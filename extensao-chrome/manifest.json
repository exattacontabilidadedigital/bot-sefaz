{
  "manifest_version": 3,
  "name": "SEFAZ-MA Auto Login",
  "version": "1.2.0",
  "description": "Preenche automaticamente login do SEFAZ-MA com modo visual robusto",
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "*://sefaznet.sefaz.ma.gov.br/*",
    "*://sefaz.ma.gov.br/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://sefaznet.sefaz.ma.gov.br/*",
        "*://sefaz.ma.gov.br/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "externally_connectable": {
    "matches": [
      "http://localhost:3000/*",
      "http://localhost:8000/*",
      "http://127.0.0.1:3000/*",
      "http://127.0.0.1:8000/*"
    ]
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "SEFAZ-MA Auto Login"
  }
}
