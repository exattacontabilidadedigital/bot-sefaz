{
  "manifest_version": 3,
  "name": "SEFAZ-MA Auto Login",
  "version": "1.2.0",
  "description": "Preenche automaticamente login do SEFAZ-MA com modo visual robusto e comunicação aprimorada",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "management",
    "scripting"
  ],
  "host_permissions": [
    "*://sefaznet.sefaz.ma.gov.br/*",
    "*://sefaz.ma.gov.br/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://sefaznet.sefaz.ma.gov.br/*",
        "*://sefaz.ma.gov.br/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "externally_connectable": {
    "matches": [
      "http://localhost:*/*",
      "https://localhost:*/*",
      "http://127.0.0.1:*/*",
      "https://127.0.0.1:*/*",
      "http://192.168.*:*/*",
      "http://10.*.*.*:*/*",
      "http://172.16.*.*:*/*",
      "file:///*",
      "*://*.localhost/*"
    ]
  },
  "web_accessible_resources": [
    {
      "resources": ["*.js", "*.json"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "SEFAZ-MA Auto Login v1.2.0"
  }
}
