{
  "manifest_version": 3,
  "name": "SEFAZ-MA Auto Login",
  "version": "1.1.0",
  "description": "Preenche automaticamente login do SEFAZ-MA com modo visual",
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "*://sefaznet.sefaz.ma.gov.br/*",
    "*://sefaz.ma.gov.br/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://sefaznet.sefaz.ma.gov.br/*",
        "*://sefaz.ma.gov.br/*"
      ],
      "js": ["content_simple.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background_simple.js"
  },
  "externally_connectable": {
    "matches": [
      "http://localhost:*/*",
      "https://localhost:*/*",
      "http://127.0.0.1:*/*",
      "https://127.0.0.1:*/*"
    ]
  }
}
